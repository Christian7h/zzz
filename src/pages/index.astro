---
import Layout from '../layouts/Layout.astro';
import CharacterCard from '../components/CharacterCard.astro';

const response = await fetch('https://zzzdatabase-33e18-default-rtdb.firebaseio.com/characters.json');
const characters = await response.json();
---

<Layout title="ZZZ Characters">
	<main>
		<h1>Bocchi The Goat JSON fetch<span class="text-gradient"> Zenless Zone Zero (ZZZ)</span></h1>
		<div class="character-grid">
			{characters.map((character) => (
				<CharacterCard
					name={character.name}
					age={character.age}
					description={character.description}
					height={character.height}
					image={character.image}
					rank={character.rank}
					type={character.type}
				/>
			))}
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 2rem;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.character-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>